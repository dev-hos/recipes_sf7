	<a href="{{path('admin.recipes.create')}}" class="btn btn-sm btn-primary mb-3">Ajouter une recette</a>
	<table class="table">
		<thead>
			<th>title</th>
			<th>category</th>
			<th style="width: 200px;">Actions</th>
		</thead>
		<tbody>
			{% for recipe in recipes %}
				<tr>
					<td>{{recipe.title}}</td>
					<td>{{recipe.category.name | default('') }} </td>
					<td class="d-flex gap-2">
						<a href="{{path('admin.recipes.show', {id: recipe.id, slug: recipe.slug}) }}" class="btn btn-sm btn-primary">Voir</a>
						<a href="{{path('admin.recipes.edit', {id: recipe.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
						<form action="{{path('admin.recipes.delete', {id: recipe.id})}}" method="post" onclick="return confirm('Etes vous sur de supprimer la recette ?')">
							<input type="hidden" name="_method" value="DELETE">
							<button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
						</form>
					</td>
				</tr>

			{% endfor %}
		</tbody>
