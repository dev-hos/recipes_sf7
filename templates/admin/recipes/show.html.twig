{% extends 'admin/admin.html.twig' %}

{% block title 'recette | ' ~  recipe.title %}

{% block body %} 
<h1>{{recipe.title}}</h1>
<p> {{recipe.content}} </p>
<p> <em class="text-muted">durée : {{ recipe.duration }} mn</em> </p>
<p><em class="text-muted"> Créer le {{recipe.createdAt | date('d-m-Y à\ H:i:s')}} </em></p>
<p><em class="text-muted"> Modifiée le {{recipe.updatedAt | date('d-m-Y à\ H:i:s')}} </em></p>
{% endblock %}
